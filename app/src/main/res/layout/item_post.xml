<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:padding="10dp"
    android:background="@color/white">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/t_image"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_profile"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/t_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/t_comment"
        android:layout_alignTop="@+id/t_delete"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/t_postImage"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        app:srcCompat="@android:color/black"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="69dp" />

    <ImageView
        android:id="@+id/t_likes"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/t_image"
        android:layout_marginBottom="59dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_likes"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/t_comment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/t_likes"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="59dp"
        android:src="@drawable/ic_commet"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/t_message"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/t_likes"
        android:layout_marginLeft="94dp"
        android:layout_marginStart="118dp"
        android:src="@drawable/ic_message"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/t_fav"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/t_likes"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_fav"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/t_body"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/t_numLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/t_likes"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="8dp"
        android:text="0 likes"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/t_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/t_postImage"
        android:layout_alignTop="@+id/t_image"
        app:srcCompat="@drawable/ic_delete" />

</RelativeLayout>