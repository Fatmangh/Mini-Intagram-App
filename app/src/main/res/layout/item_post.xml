<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:padding="5dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/t_image"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_profile"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/t_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="19dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/t_postImage"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        app:srcCompat="@android:color/black"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="69dp" />

    <ImageView
        android:id="@+id/t_likes"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/t_image"
        android:layout_marginBottom="59dp"
        android:src="@drawable/ic_likes"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/t_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/t_likes"
        android:layout_marginStart="70dp"
        android:src="@drawable/ic_commet"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/t_message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/t_likes"
        android:layout_marginStart="131dp"
        android:src="@drawable/ic_message"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/t_fav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/t_body"
        android:layout_alignTop="@+id/t_likes"
        android:src="@drawable/ic_fav"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/t_body"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="TextView"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/t_numLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t_body"
        android:layout_alignStart="@+id/t_image"
        android:text="Likes"
        android:textColor="@color/black" />

</RelativeLayout>